<?xml version="1.0"?>
<rdf:RDF xmlns:owl="http://www.w3.org/2002/07/owl#" xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#" xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#" xml:base="http://www.anl.gov/sss/grid-stix-2.1-cyber-contexts.owl">
  <owl:Ontology rdf:about="http://www.anl.gov/sss/grid-stix-2.1-cyber-contexts.owl">
    <owl:imports rdf:resource="http://docs.oasis-open.org/ns/cti/stix/observed-data"/>
    <owl:imports rdf:resource="http://docs.oasis-open.org/ns/cti/stix/indicator"/>
    <owl:imports rdf:resource="http://docs.oasis-open.org/ns/cti/stix/identity"/>
    <owl:imports rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-vocab.owl"/>
    <rdfs:label>grid_stix_2_1_cyber_contexts</rdfs:label>
    <rdfs:comment>Cybersecurity context definitions for Grid-STIX 2.1</rdfs:comment>
  </owl:Ontology>
  <owl:Class rdf:about="http://www.anl.gov/sss/grid-stix-2.1-cyber-contexts.owl#CybersecurityPosture">
    <rdfs:subClassOf rdf:resource="http://docs.oasis-open.org/ns/cti/stix#ObservedData"/>
    <rdfs:label>cybersecurity_posture</rdfs:label>
    <rdfs:comment>
      Cybersecurity Posture &#x2013; represents the current cybersecurity stance.
    </rdfs:comment>
  </owl:Class>
  <owl:Class rdf:about="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#ElectronicSecurityPerimeter">
    <rdfs:subClassOf rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#SecurityZone"/>
    <rdfs:comment>A logical border surrounding a network where critical cyber assets are located, per NERC CIP standards.</rdfs:comment>
    <rdfs:label>electronic_security_perimeter</rdfs:label>
  </owl:Class>
  <owl:ObjectProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-cyber-contexts.owl#trust_level">
    <rdfs:domain rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-cyber-contexts.owl#CybersecurityPosture"/>
    <rdfs:range rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-vocab.owl#trust_level_ov"/>
    <rdfs:comment>Specifies the trust level of a cybersecurity posture</rdfs:comment>
    <rdfs:label>trust_level</rdfs:label>
  </owl:ObjectProperty>
  <owl:ObjectProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-cyber-contexts.owl#alert_level">
    <rdfs:domain rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-cyber-contexts.owl#CybersecurityPosture"/>
    <rdfs:range rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-vocab.owl#alert_level_ov"/>
    <rdfs:comment>The current alert level for cybersecurity operations.</rdfs:comment>
    <rdfs:label>alert_level</rdfs:label>
  </owl:ObjectProperty>
  <owl:ObjectProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-cyber-contexts.owl#intelligence_sources">
    <rdfs:domain rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-cyber-contexts.owl#CybersecurityPosture"/>
    <rdfs:range rdf:resource="http://docs.oasis-open.org/ns/cti/stix/indicator"/>
    <rdfs:comment>References to intelligence indicators informing the posture.</rdfs:comment>
    <rdfs:label>intelligence_sources</rdfs:label>
  </owl:ObjectProperty>
  <owl:ObjectProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-cyber-contexts.owl#defensive_posture">
    <rdfs:domain rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-cyber-contexts.owl#CybersecurityPosture"/>
    <rdfs:range rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-vocab.owl#defensive_posture_ov"/>
    <rdfs:comment>The current defensive posture being maintained.</rdfs:comment>
    <rdfs:label>defensive_posture</rdfs:label>
  </owl:ObjectProperty>
  <owl:ObjectProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-cyber-contexts.owl#authentication_requirements">
    <rdfs:domain rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-cyber-contexts.owl#CybersecurityPosture"/>
    <rdfs:range rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-vocab.owl#authentication_requirement_ov"/>
    <rdfs:comment>Authentication requirements currently in place.</rdfs:comment>
    <rdfs:label>authentication_requirements</rdfs:label>
  </owl:ObjectProperty>
  <owl:ObjectProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-cyber-contexts.owl#monitoring_level">
    <rdfs:domain rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-cyber-contexts.owl#CybersecurityPosture"/>
    <rdfs:range rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-vocab.owl#monitoring_level_ov"/>
    <rdfs:comment>The level of monitoring currently in effect.</rdfs:comment>
    <rdfs:label>monitoring_level</rdfs:label>
  </owl:ObjectProperty>
  <owl:ObjectProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-cyber-contexts.owl#authorized_by">
    <rdfs:domain rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-cyber-contexts.owl#CybersecurityPosture"/>
    <rdfs:range rdf:resource="http://docs.oasis-open.org/ns/cti/stix/identity"/>
    <rdfs:comment>Identity of the authority who authorized the posture.</rdfs:comment>
    <rdfs:label>authorized_by</rdfs:label>
  </owl:ObjectProperty>
  <owl:ObjectProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-cyber-contexts.owl#incident_response_status">
    <rdfs:domain rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-cyber-contexts.owl#CybersecurityPosture"/>
    <rdfs:range rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-vocab.owl#incident_response_status_ov"/>
    <rdfs:comment>Current status of incident response team.</rdfs:comment>
    <rdfs:label>incident_response_status</rdfs:label>
  </owl:ObjectProperty>
  <owl:ObjectProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-cyber-contexts.owl#hasContext_CybersecurityPosture">
    <rdfs:domain rdf:resource="http://docs.oasis-open.org/ns/cti/stix/observed-data"/>
    <rdfs:range rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-cyber-contexts.owl#CybersecurityPosture"/>
    <rdfs:comment>Links an observed data record to a cybersecurity posture context.</rdfs:comment>
    <rdfs:label>hascontext_cybersecurityposture</rdfs:label>
  </owl:ObjectProperty>
  <owl:DatatypeProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-cyber-contexts.owl#reason_for_level">
    <rdfs:domain rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-cyber-contexts.owl#CybersecurityPosture"/>
    <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
    <rdfs:comment>Explanation for the current alert level.</rdfs:comment>
    <rdfs:label>reason_for_level</rdfs:label>
  </owl:DatatypeProperty>
  <owl:DatatypeProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-cyber-contexts.owl#review_time">
    <rdfs:domain rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-cyber-contexts.owl#CybersecurityPosture"/>
    <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#dateTime"/>
    <rdfs:comment>Time when the posture was last reviewed.</rdfs:comment>
    <rdfs:label>review_time</rdfs:label>
  </owl:DatatypeProperty>
  <owl:DatatypeProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-cyber-contexts.owl#special_access_controls">
    <rdfs:domain rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-cyber-contexts.owl#CybersecurityPosture"/>
    <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
    <rdfs:comment>Description of any special access controls in place.</rdfs:comment>
    <rdfs:label>special_access_controls</rdfs:label>
  </owl:DatatypeProperty>
</rdf:RDF>
