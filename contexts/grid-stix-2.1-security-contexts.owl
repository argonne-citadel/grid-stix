@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix stix: <http://stixschema.org/v21#> .
@prefix gridc: <http://www.anl.gov/sss/grid-stix-2.1-operational-contexts.owl#> .
@prefix gridv: <http://www.anl.gov/sss/grid-stix-2.1-vocab.owl#> .

# ------------------------------------------------------------------
# Grid-STIX 2.1 Operational Contexts Module
# IRI: http://www.anl.gov/sss/grid-stix-2.1-operational-contexts.owl
# ------------------------------------------------------------------

<http://www.anl.gov/sss/grid-stix-2.1-operational-contexts.owl>
    a owl:Ontology ;
    rdfs:comment "Operational context definitions for Grid-STIX 2.1" ;
    owl:imports <http://stixschema.org/v21#ObservedData>,
                <http://stixschema.org/v21#Incident>,
                <http://www.anl.gov/sss/grid-stix-2.1-vocab.owl> .

################################################################################
# MaintenanceContext
################################################################################

gridc:MaintenanceContext
    a owl:Class ;
    rdfs:subClassOf stix:ObservedData ;
    rdfs:comment "Context describing planned or unplanned maintenance activities." .

# Datatype Properties for MaintenanceContext

gridc:maintenance_type
    a owl:DatatypeProperty ;
    rdfs:domain gridc:MaintenanceContext ;
    rdfs:range gridv:maintenance_type_ov ;
    rdfs:comment "Type of maintenance, e.g., routine, corrective." .

gridc:maintenance_status
    a owl:DatatypeProperty ;
    rdfs:domain gridc:MaintenanceContext ;
    rdfs:range gridv:maintenance_status_ov ;
    rdfs:comment "Status of maintenance, e.g., scheduled, in-progress, complete." .

gridc:maintenance_start_time
    a owl:DatatypeProperty ;
    rdfs:domain gridc:MaintenanceContext ;
    rdfs:range xsd:dateTime ;
    rdfs:comment "Start time of maintenance activity." .

gridc:maintenance_end_time
    a owl:DatatypeProperty ;
    rdfs:domain gridc:MaintenanceContext ;
    rdfs:range xsd:dateTime ;
    rdfs:comment "End time of maintenance activity." .

################################################################################
# OutageContext
################################################################################

gridc:OutageContext
    a owl:Class ;
    rdfs:subClassOf stix:Incident ;
    rdfs:comment "Context describing grid outages and service interruptions." .

# Datatype Properties for OutageContext

gridc:outage_type
    a owl:DatatypeProperty ;
    rdfs:domain gridc:OutageContext ;
    rdfs:range gridv:outage_type_ov ;
    rdfs:comment "Type of outage, e.g., planned, unplanned." .

gridc:outage_cause
    a owl:DatatypeProperty ;
    rdfs:domain gridc:OutageContext ;
    rdfs:range gridv:outage_cause_ov ;
    rdfs:comment "Cause of outage, e.g., equipment failure, weather." .

gridc:estimated_restore_time
    a owl:DatatypeProperty ;
    rdfs:domain gridc:OutageContext ;
    rdfs:range xsd:dateTime ;
    rdfs:comment "Estimated time when service will be restored." .

gridc:actual_restore_time
    a owl:DatatypeProperty ;
    rdfs:domain gridc:OutageContext ;
    rdfs:range xsd:dateTime ;
    rdfs:comment "Actual time when service was restored." .

################################################################################
# EmergencyResponseContext
################################################################################

gridc:EmergencyResponseContext
    a owl:Class ;
    rdfs:subClassOf stix:Incident ;
    rdfs:comment "Context describing emergency response actions for the grid." .

# Datatype Properties for EmergencyResponseContext

gridc:emergency_type
    a owl:DatatypeProperty ;
    rdfs:domain gridc:EmergencyResponseContext ;
    rdfs:range gridv:emergency_type_ov ;
    rdfs:comment "Type of emergency, e.g., fire, security breach." .

gridc:emergency_status
    a owl:DatatypeProperty ;
    rdfs:domain gridc:EmergencyResponseContext ;
    rdfs:range gridv:emergency_status_ov ;
    rdfs:comment "Status of emergency response, e.g., deployed, resolved." .

gridc:response_level
    a owl:DatatypeProperty ;
    rdfs:domain gridc:EmergencyResponseContext ;
    rdfs:range gridv:response_level_ov ;
    rdfs:comment "Severity or level of response." .

gridc:response_team_refs
    a owl:ObjectProperty ;
    rdfs:domain gridc:EmergencyResponseContext ;
    rdfs:range stix:Identity ;
    rdfs:comment "References to response team identities involved." .

################################################################################
# GridOperatingConditionContext
################################################################################

gridc:GridOperatingConditionContext
    a owl:Class ;
    rdfs:subClassOf stix:ObservedData ;
    rdfs:comment "Context representing real-time operating conditions of the grid." .

# Datatype Properties for GridOperatingConditionContext

gridc:grid_operating_condition
    a owl:DatatypeProperty ;
    rdfs:domain gridc:GridOperatingConditionContext ;
    rdfs:range gridv:grid_operating_condition_ov ;
    rdfs:comment "Current operating condition of the grid, e.g., normal, peak load." .

gridc:monitoring_level
    a owl:DatatypeProperty ;
    rdfs:domain gridc:GridOperatingConditionContext ;
    rdfs:range gridv:monitoring_level_ov ;
    rdfs:comment "Level of system monitoring in effect." .

gridc:current_load
    a owl:DatatypeProperty ;
    rdfs:domain gridc:GridOperatingConditionContext ;
    rdfs:range xsd:float ;
    rdfs:comment "Current load on the grid in megawatts." .

gridc:voltage_status
    a owl:DatatypeProperty ;
    rdfs:domain gridc:GridOperatingConditionContext ;
    rdfs:range gridv:voltage_status_ov ;
    rdfs:comment "Voltage status of the grid." .

gridc:frequency
    a owl:DatatypeProperty ;
    rdfs:domain gridc:GridOperatingConditionContext ;
    rdfs:range xsd:float ;
    rdfs:comment "Current frequency of the grid in Hertz." .

################################################################################
# Note
################################################################################
