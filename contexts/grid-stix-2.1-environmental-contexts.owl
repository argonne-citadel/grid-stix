<?xml version="1.0"?>
<rdf:RDF xmlns:owl="http://www.w3.org/2002/07/owl#" xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#" xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#" xml:base="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl">
  <owl:Ontology rdf:about="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl">
    <owl:imports rdf:resource="http://docs.oasis-open.org/ns/cti/stix/incident"/>
    <owl:imports rdf:resource="http://docs.oasis-open.org/ns/cti/stix/observed-data"/>
    <owl:imports rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-vocab.owl"/>
    <rdfs:label>grid_stix_2_1_environmental_contexts</rdfs:label>
    <rdfs:comment>Environmental context definitions for Grid-STIX 2.1</rdfs:comment>
  </owl:Ontology>
  <owl:Class rdf:about="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#NaturalDisasterContext">
    <rdfs:subClassOf rdf:resource="http://docs.oasis-open.org/ns/cti/stix#Incident"/>
    <rdfs:comment>Represents natural disaster events affecting the grid.</rdfs:comment>
    <rdfs:label>natural_disaster_context</rdfs:label>
  </owl:Class>
  <owl:Class rdf:about="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#WeatherContext">
    <rdfs:subClassOf rdf:resource="http://docs.oasis-open.org/ns/cti/stix#ObservedData"/>
    <rdfs:comment>Represents weather conditions that may affect grid operations.</rdfs:comment>
    <rdfs:label>weather_context</rdfs:label>
  </owl:Class>
  <owl:ObjectProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#has_context_weather_context">
    <rdfs:domain rdf:resource="http://docs.oasis-open.org/ns/cti/stix/observed-data"/>
    <rdfs:range rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#WeatherContext"/>
    <rdfs:comment>Links an observed data record to a specific WeatherContext.</rdfs:comment>
    <rdfs:label>has_context_weather_context</rdfs:label>
  </owl:ObjectProperty>
  <owl:ObjectProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#has_context_natural_disaster_context">
    <rdfs:domain rdf:resource="http://docs.oasis-open.org/ns/cti/stix/observed-data"/>
    <rdfs:range rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#NaturalDisasterContext"/>
    <rdfs:comment>Links an observed data record to a specific NaturalDisasterContext.</rdfs:comment>
    <rdfs:label>has_context_natural_disaster_context</rdfs:label>
  </owl:ObjectProperty>
  <owl:ObjectProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#affected_region_refs">
    <rdfs:domain rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#NaturalDisasterContext"/>
    <rdfs:range rdf:resource="http://docs.oasis-open.org/ns/cti/stix/location"/>
    <rdfs:comment>References to locations affected by the disaster.</rdfs:comment>
    <rdfs:label>affected_region_refs</rdfs:label>
  </owl:ObjectProperty>
  <owl:ObjectProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#communications_status">
    <rdfs:domain rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#NaturalDisasterContext"/>
    <rdfs:range rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-vocab.owl#communications_status_ov"/>
    <rdfs:comment>Communications status during the disaster.</rdfs:comment>
    <rdfs:label>communications_status</rdfs:label>
  </owl:ObjectProperty>
  <owl:ObjectProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#declaring_authority">
    <rdfs:domain rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#NaturalDisasterContext"/>
    <rdfs:range rdf:resource="http://docs.oasis-open.org/ns/cti/stix/identity"/>
    <rdfs:comment>Authority declaring the disaster.</rdfs:comment>
    <rdfs:label>declaring_authority</rdfs:label>
  </owl:ObjectProperty>
  <owl:ObjectProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#disaster_declaration_level">
    <rdfs:domain rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#NaturalDisasterContext"/>
    <rdfs:range rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-vocab.owl#disaster_declaration_level_ov"/>
    <rdfs:comment>Official disaster declaration level.</rdfs:comment>
    <rdfs:label>disaster_declaration_level</rdfs:label>
  </owl:ObjectProperty>
  <owl:ObjectProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#disaster_type">
    <rdfs:domain rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#NaturalDisasterContext"/>
    <rdfs:range rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-vocab.owl#disaster_type_ov"/>
    <rdfs:comment>Type of disaster, e.g., flood, earthquake.</rdfs:comment>
    <rdfs:label>disaster_type</rdfs:label>
  </owl:ObjectProperty>
  <owl:ObjectProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#evacuation_zones_refs">
    <rdfs:domain rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#NaturalDisasterContext"/>
    <rdfs:range rdf:resource="http://docs.oasis-open.org/ns/cti/stix/location"/>
    <rdfs:comment>Locations of evacuation zones.</rdfs:comment>
    <rdfs:label>evacuation_zones_refs</rdfs:label>
  </owl:ObjectProperty>
  <owl:ObjectProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#forecast_refs">
    <rdfs:domain rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#WeatherContext"/>
    <rdfs:range rdf:resource="http://docs.oasis-open.org/ns/cti/stix/core#CyberObservable"/>
    <rdfs:comment>References to weather forecast Observables.</rdfs:comment>
    <rdfs:label>forecast_refs</rdfs:label>
  </owl:ObjectProperty>
  <owl:ObjectProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#object_marking_refs">
    <rdfs:domain rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#NaturalDisasterContext"/>
    <rdfs:range rdf:resource="http://docs.oasis-open.org/ns/cti/data-marking#MarkingDefinition"/>
    <rdfs:comment>Marking definitions applied to the disaster context.</rdfs:comment>
    <rdfs:label>object_marking_refs</rdfs:label>
  </owl:ObjectProperty>
  <owl:ObjectProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#potential_impact">
    <rdfs:domain rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#WeatherContext"/>
    <rdfs:range rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-vocab.owl#potential_impact_ov"/>
    <rdfs:comment>Potential impact of the weather event on grid.</rdfs:comment>
    <rdfs:label>potential_impact</rdfs:label>
  </owl:ObjectProperty>
  <owl:ObjectProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#transportation_status">
    <rdfs:domain rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#NaturalDisasterContext"/>
    <rdfs:range rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-vocab.owl#transportation_status_ov"/>
    <rdfs:comment>Transportation status during the disaster.</rdfs:comment>
    <rdfs:label>transportation_status</rdfs:label>
  </owl:ObjectProperty>
  <owl:ObjectProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#weather_type">
    <rdfs:domain rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#WeatherContext"/>
    <rdfs:range rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-vocab.owl#weather_type_ov"/>
    <rdfs:comment>Type of weather, e.g., rain, snow, wind.</rdfs:comment>
    <rdfs:label>weather_type</rdfs:label>
  </owl:ObjectProperty>
  <owl:ObjectProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#storm_type">
    <rdfs:domain rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#WeatherContext"/>
    <rdfs:range rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-vocab.owl#storm_type_ov"/>
    <rdfs:comment>Specific type of storm (e.g., blizzard, hurricane, thunderstorm).</rdfs:comment>
    <rdfs:label>storm_type</rdfs:label>
  </owl:ObjectProperty>
  <owl:ObjectProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#associated_weather_context">
    <rdfs:domain rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#NaturalDisasterContext"/>
    <rdfs:range rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#WeatherContext"/>
    <rdfs:comment>Links a disaster context to a weather context that contributed to or accompanied the disaster.</rdfs:comment>
    <rdfs:label>associated_weather_context</rdfs:label>
  </owl:ObjectProperty>
  <owl:DatatypeProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#current_temperature">
    <rdfs:domain rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#WeatherContext"/>
    <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#float"/>
    <rdfs:comment>Measured current temperature in Celsius.</rdfs:comment>
    <rdfs:label>current_temperature</rdfs:label>
  </owl:DatatypeProperty>
  <owl:DatatypeProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#lightning_strike_proximity">
    <rdfs:domain rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#WeatherContext"/>
    <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#float"/>
    <rdfs:comment>Proximity of nearest lightning strike in kilometers.</rdfs:comment>
    <rdfs:label>lightning_strike_proximity</rdfs:label>
  </owl:DatatypeProperty>
  <owl:DatatypeProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#precipitation_rate">
    <rdfs:domain rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#WeatherContext"/>
    <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#float"/>
    <rdfs:comment>Precipitation rate in mm per hour.</rdfs:comment>
    <rdfs:label>precipitation_rate</rdfs:label>
  </owl:DatatypeProperty>
  <owl:DatatypeProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#projected_end_time">
    <rdfs:domain rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#NaturalDisasterContext"/>
    <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#dateTime"/>
    <rdfs:comment>Projected end time of the disaster event.</rdfs:comment>
    <rdfs:label>projected_end_time</rdfs:label>
  </owl:DatatypeProperty>
  <owl:DatatypeProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#severity">
    <rdfs:domain rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#NaturalDisasterContext"/>
    <rdfs:domain rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#WeatherContext"/>
    <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#integer"/>
    <rdfs:comment>Severity level of disaster or weather event on a scale of 1-5.</rdfs:comment>
    <rdfs:label>severity</rdfs:label>
  </owl:DatatypeProperty>
  <owl:DatatypeProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#source">
    <rdfs:domain rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#WeatherContext"/>
    <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
    <rdfs:comment>Source of the weather data.</rdfs:comment>
    <rdfs:label>source</rdfs:label>
  </owl:DatatypeProperty>
  <owl:DatatypeProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#wind_speed">
    <rdfs:domain rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-environmental-contexts.owl#WeatherContext"/>
    <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#float"/>
    <rdfs:comment>Wind speed in meters per second.</rdfs:comment>
    <rdfs:label>wind_speed</rdfs:label>
  </owl:DatatypeProperty>
</rdf:RDF>
