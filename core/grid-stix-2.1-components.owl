    <owl:imports rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-vocab.owl"/>
    <rdfs:label>grid_stix_2_1_components</rdfs:label>
    <rdfs:comment>Definitions of grid component classes and their properties, extending the base asset classes</rdfs:comment>
  </owl:Ontology>
  <owl:ObjectProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#operates_in_context">
    <rdfs:domain rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-components.owl#GridComponent"/>
    <rdfs:range rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-operational-contexts.owl#OperationalContext"/>
    <rdfs:label>operates_in_context</rdfs:label>
    <rdfs:comment>Specifies the operational context in which a grid component is currently operating</rdfs:comment>
  </owl:ObjectProperty>
  <owl:ObjectProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#component_type">
    <rdfs:domain rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#GridComponent"/>
    <rdfs:range rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-vocab.owl#grid_component_ov"/>
    <rdfs:comment>Type of grid component, e.g., substation, transformer.</rdfs:comment>
    <rdfs:label>component_type</rdfs:label>
  </owl:ObjectProperty>
  <owl:ObjectProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#ot_device_type">
    <rdfs:domain rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#OTDevice"/>
    <rdfs:range rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-vocab.owl#ot_device_type_ov"/>
    <rdfs:comment>Type of OT device, e.g., PLC, SCADA-server.</rdfs:comment>
    <rdfs:label>ot_device_type</rdfs:label>
  </owl:ObjectProperty>
  <owl:ObjectProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#zone_type">
    <rdfs:domain rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#SecurityZone"/>
    <rdfs:range rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-vocab.owl#security_zone_type_ov"/>
    <rdfs:comment>Type of security zone, e.g., OT, IT, substation.</rdfs:comment>
    <rdfs:label>zone_type</rdfs:label>
  </owl:ObjectProperty>
  <owl:ObjectProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#connects_to">
    <rdfs:domain>
      <owl:Class>
        <owl:unionOf rdf:parseType="Collection">
          <rdf:Description rdf:about="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#GridComponent"/>
          <rdf:Description rdf:about="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#OTDevice"/>
        </owl:unionOf>
      </owl:Class>
    </rdfs:domain>
    <rdfs:range>
      <owl:Class>
        <owl:unionOf rdf:parseType="Collection">
          <rdf:Description rdf:about="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#GridComponent"/>
          <rdf:Description rdf:about="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#OTDevice"/>
        </owl:unionOf>
      </owl:Class>
    </rdfs:range>
    <rdfs:comment>Indicates a physical or logical connection between components.</rdfs:comment>
    <rdfs:label>connects_to</rdfs:label>
  </owl:ObjectProperty>
  <owl:ObjectProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#controls">
    <rdfs:domain rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#OTDevice"/>
    <rdfs:range rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#GridComponent"/>
    <rdfs:comment>Indicates that an OT device controls a grid component.</rdfs:comment>
    <rdfs:label>controls</rdfs:label>
  </owl:ObjectProperty>
  <owl:ObjectProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#located_in_zone">
    <rdfs:domain>
      <owl:Class>
        <owl:unionOf rdf:parseType="Collection">
          <rdf:Description rdf:about="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#GridComponent"/>
          <rdf:Description rdf:about="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#OTDevice"/>
        </owl:unionOf>
      </owl:Class>
    </rdfs:domain>
    <rdfs:range rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#SecurityZone"/>
    <rdfs:comment>Indicates that a component is located within a security zone.</rdfs:comment>
    <rdfs:label>located_in_zone</rdfs:label>
  </owl:ObjectProperty>
  <owl:ObjectProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#sensor_type">
    <rdfs:domain rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-components.owl#Sensor"/>
    <rdfs:range rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-vocab.owl#sensor_type_ov"/>
    <rdfs:comment>Type of sensor (e.g., voltage, temperature, motion).</rdfs:comment>
    <rdfs:label>sensor_type</rdfs:label>
  </owl:ObjectProperty>
  <owl:DatatypeProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#end_of_support">
    <rdfs:domain rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#OTDevice"/>
    <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#dateTime"/>
    <rdfs:comment>End of support date.</rdfs:comment>
    <rdfs:label>end_of_support</rdfs:label>
  </owl:DatatypeProperty>
  <owl:DatatypeProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#manufacture_date">
    <rdfs:domain rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#OTDevice"/>
    <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#dateTime"/>
    <rdfs:comment>Date of manufacture.</rdfs:comment>
    <rdfs:label>manufacture_date</rdfs:label>
  </owl:DatatypeProperty>
  <owl:DatatypeProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#model">
    <rdfs:domain rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#OTDevice"/>
    <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
    <rdfs:comment>Device model name or number.</rdfs:comment>
    <rdfs:label>model</rdfs:label>
  </owl:DatatypeProperty>
  <owl:DatatypeProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#vendor">
    <rdfs:domain rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#OTDevice"/>
    <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
    <rdfs:comment>Vendor or manufacturer.</rdfs:comment>
    <rdfs:label>vendor</rdfs:label>
  </owl:DatatypeProperty>
  <owl:DatatypeProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#version">
    <rdfs:domain rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#OTDevice"/>
    <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
    <rdfs:comment>Version of firmware or software.</rdfs:comment>
    <rdfs:label>version</rdfs:label>
  </owl:DatatypeProperty>
  <owl:DatatypeProperty rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#communication_protocol">
    <rdfs:domain rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#OTDevice"/>
    <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
    <rdfs:comment>Communication protocol used by the device (e.g., DNP3, Modbus).</rdfs:comment>
    <rdfs:label>communication_protocol</rdfs:label>
  </owl:DatatypeProperty>
  <owl:Class rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#ProtectiveRelay">
    <rdfs:subClassOf rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#GridComponent"/>
    <rdfs:comment>A device designed to trip a circuit breaker when a fault is detected in the electrical system.</rdfs:comment>
    <rdfs:label>protective_relay</rdfs:label>
  </owl:Class>
  <owl:Class rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#CircuitBreaker">
    <rdfs:subClassOf rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#GridComponent"/>
    <rdfs:comment>An automatically operated electrical switch designed to protect an electrical circuit from damage caused by excess current.</rdfs:comment>
    <rdfs:label>circuit_breaker</rdfs:label>
  </owl:Class>
  <owl:Class rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#Sensor">
    <rdfs:subClassOf rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#GridComponent"/>
    <rdfs:comment>Sensor device used to measure or detect physical conditions such as voltage, temperature, vibration, etc.</rdfs:comment>
    <rdfs:label>sensor</rdfs:label>
  </owl:Class>
  <owl:Class rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#RTU">
    <rdfs:subClassOf rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#OTDevice"/>
    <rdfs:comment>Remote Terminal Unit - a microprocessor-controlled electronic device that interfaces objects in the physical world to a SCADA system.</rdfs:comment>
    <rdfs:label>rtu</rdfs:label>
  </owl:Class>
  <owl:Class rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#PLC">
    <rdfs:subClassOf rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#OTDevice"/>
    <rdfs:comment>Programmable Logic Controller - an industrial digital computer adapted for the control of manufacturing processes.</rdfs:comment>
    <rdfs:label>plc</rdfs:label>
  </owl:Class>
  <owl:Class rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#IED">
    <rdfs:subClassOf rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#OTDevice"/>
    <rdfs:comment>Intelligent Electronic Device - a microprocessor-based controller for power system equipment.</rdfs:comment>
    <rdfs:label>ied</rdfs:label>
  </owl:Class>
  <owl:Class rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#HMI">
    <rdfs:subClassOf rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#OTDevice"/>
    <rdfs:comment>Human-Machine Interface - a user interface that connects an operator to the controller for an industrial system.</rdfs:comment>
    <rdfs:label>hmi</rdfs:label>
  </owl:Class>
  <owl:Class rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#CapacitorBank">
    <rdfs:subClassOf rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#GridComponent"/>
    <rdfs:comment>A group of capacitors connected together to provide reactive power compensation and voltage support on the electrical grid.</rdfs:comment>
    <rdfs:label>capacitor_bank</rdfs:label>
  </owl:Class>
  <owl:Class rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#VoltageRegulator">
    <rdfs:subClassOf rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#GridComponent"/>
    <rdfs:comment>A device that automatically maintains a constant voltage level on an electrical circuit by adjusting tap positions.</rdfs:comment>
    <rdfs:label>voltage_regulator</rdfs:label>
  </owl:Class>
  <owl:Class rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#SmartMeter">
    <rdfs:subClassOf rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#OTDevice"/>
    <rdfs:comment>An electronic device that records consumption of electric energy and communicates the information to the utility for monitoring and billing.</rdfs:comment>
    <rdfs:label>smart_meter</rdfs:label>
  </owl:Class>
  <owl:Class rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#LoadTapChanger">
    <rdfs:subClassOf rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#GridComponent"/>
    <rdfs:comment>A mechanism in transformers that allows variable turn ratios to be selected to compensate for supply voltage variations.</rdfs:comment>
    <rdfs:label>load_tap_changer</rdfs:label>
  </owl:Class>
  <owl:Class rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#Recloser">
    <rdfs:subClassOf rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#GridComponent"/>
    <rdfs:comment>An automatic, high-voltage electric switch that can interrupt and reclose an alternating current circuit multiple times to clear temporary faults.</rdfs:comment>
    <rdfs:label>recloser</rdfs:label>
  </owl:Class>
  <owl:Class rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#Sectionalizer">
    <rdfs:subClassOf rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#GridComponent"/>
    <rdfs:comment>A protective device that automatically isolates faulted sections of overhead distribution lines.</rdfs:comment>
    <rdfs:label>sectionalizer</rdfs:label>
  </owl:Class>
  <owl:Class rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#EnergyStorageSystem">
    <rdfs:subClassOf rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#GridComponent"/>
    <rdfs:comment>A system that captures electrical energy and stores it for later use, including batteries, flywheels, and other storage technologies.</rdfs:comment>
    <rdfs:label>energy_storage_system</rdfs:label>
  </owl:Class>
  
