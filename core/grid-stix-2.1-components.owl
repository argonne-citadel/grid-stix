  <owl:Class rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#protective-relay">
    <rdfs:subClassOf rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#grid-component"/>
    <rdfs:comment>A device designed to trip a circuit breaker when a fault is detected in the electrical system.</rdfs:comment>
    <rdfs:label>protective_relay</rdfs:label>
  </owl:Class>
  <owl:Class rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#circuit-breaker">
    <rdfs:subClassOf rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#grid-component"/>
    <rdfs:comment>An automatically operated electrical switch designed to protect an electrical circuit from damage caused by excess current.</rdfs:comment>
    <rdfs:label>circuit_breaker</rdfs:label>
  </owl:Class>
  <owl:Class rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#sensor">
    <rdfs:subClassOf rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#grid-component"/>
    <rdfs:comment>Sensor device used to measure or detect physical conditions such as voltage, temperature, vibration, etc.</rdfs:comment>
    <rdfs:label>sensor</rdfs:label>
  </owl:Class>
  <owl:Class rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#rtu">
    <rdfs:subClassOf rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#ot-device"/>
    <rdfs:comment>Remote Terminal Unit - a microprocessor-controlled electronic device that interfaces objects in the physical world to a SCADA system.</rdfs:comment>
    <rdfs:label>rtu</rdfs:label>
  </owl:Class>
  <owl:Class rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#plc">
    <rdfs:subClassOf rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#ot-device"/>
    <rdfs:comment>Programmable Logic Controller - an industrial digital computer adapted for the control of manufacturing processes.</rdfs:comment>
    <rdfs:label>plc</rdfs:label>
  </owl:Class>
  <owl:Class rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#ied">
    <rdfs:subClassOf rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#ot-device"/>
    <rdfs:comment>Intelligent Electronic Device - a microprocessor-based controller for power system equipment.</rdfs:comment>
    <rdfs:label>ied</rdfs:label>
  </owl:Class>
  <owl:Class rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#hmi">
    <rdfs:subClassOf rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#ot-device"/>
    <rdfs:comment>Human-Machine Interface - a user interface that connects an operator to the controller for an industrial system.</rdfs:comment>
    <rdfs:label>hmi</rdfs:label>
  </owl:Class>
  <owl:Class rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#capacitor-bank">
    <rdfs:subClassOf rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#grid-component"/>
    <rdfs:comment>A group of capacitors connected together to provide reactive power compensation and voltage support on the electrical grid.</rdfs:comment>
    <rdfs:label>capacitor_bank</rdfs:label>
  </owl:Class>
  <owl:Class rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#voltage-regulator">
    <rdfs:subClassOf rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#grid-component"/>
    <rdfs:comment>A device that automatically maintains a constant voltage level on an electrical circuit by adjusting tap positions.</rdfs:comment>
    <rdfs:label>voltage_regulator</rdfs:label>
  </owl:Class>
  <owl:Class rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#smart-meter">
    <rdfs:subClassOf rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#ot-device"/>
    <rdfs:comment>An electronic device that records consumption of electric energy and communicates the information to the utility for monitoring and billing.</rdfs:comment>
    <rdfs:label>smart_meter</rdfs:label>
  </owl:Class>
  <owl:Class rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#load-tap-changer">
    <rdfs:subClassOf rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#grid-component"/>
    <rdfs:comment>A mechanism in transformers that allows variable turn ratios to be selected to compensate for supply voltage variations.</rdfs:comment>
    <rdfs:label>load_tap_changer</rdfs:label>
  </owl:Class>
  <owl:Class rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#recloser">
    <rdfs:subClassOf rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#grid-component"/>
    <rdfs:comment>An automatic, high-voltage electric switch that can interrupt and reclose an alternating current circuit multiple times to clear temporary faults.</rdfs:comment>
    <rdfs:label>recloser</rdfs:label>
  </owl:Class>
  <owl:Class rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#sectionalizer">
    <rdfs:subClassOf rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#grid-component"/>
    <rdfs:comment>A protective device that automatically isolates faulted sections of overhead distribution lines.</rdfs:comment>
    <rdfs:label>sectionalizer</rdfs:label>
  </owl:Class>
  <owl:Class rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#energy-storage-system">
    <rdfs:subClassOf rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-components.owl#consumption-asset"/>
    <rdfs:comment>A system that captures electrical energy and stores it for later use, including batteries, flywheels, and other storage technologies.</rdfs:comment>
    <rdfs:label>energy_storage_system</rdfs:label>
  </owl:Class>
  
  <!-- Generation Asset Hierarchy -->
  <owl:Class rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#generation-asset">
    <rdfs:subClassOf rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#grid-component"/>
    <rdfs:comment>Abstract base class for all electrical power generation assets, from distributed resources to utility-scale facilities.</rdfs:comment>
    <rdfs:label>generation_asset</rdfs:label>
  </owl:Class>
  
  <owl:Class rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#centralized-generation-facility">
    <rdfs:subClassOf rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-components.owl#generation-asset"/>
    <rdfs:comment>Large-scale centralized power generation facilities that supply electricity to the transmission grid.</rdfs:comment>
    <rdfs:label>centralized_generation_facility</rdfs:label>
  </owl:Class>
  
  <owl:Class rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#renewable-generation-facility">
    <rdfs:subClassOf rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-components.owl#centralized-generation-facility"/>
    <rdfs:comment>Utility-scale renewable energy generation facilities such as wind farms and solar installations.</rdfs:comment>
    <rdfs:label>renewable_generation_facility</rdfs:label>
  </owl:Class>
  
  <owl:Class rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#fossil-fuel-plant">
    <rdfs:subClassOf rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-components.owl#centralized-generation-facility"/>
    <rdfs:comment>Power generation facilities that burn fossil fuels such as coal, natural gas, or oil.</rdfs:comment>
    <rdfs:label>fossil_fuel_plant</rdfs:label>
  </owl:Class>
  
  <owl:Class rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#nuclear-power-plant">
    <rdfs:subClassOf rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-components.owl#centralized-generation-facility"/>
    <rdfs:comment>Nuclear power generation facilities using nuclear fission to produce electricity.</rdfs:comment>
    <rdfs:label>nuclear_power_plant</rdfs:label>
  </owl:Class>
  
  <!-- Transmission Asset Hierarchy -->
  <owl:Class rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#transmission-asset">
    <rdfs:subClassOf rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#grid-component"/>
    <rdfs:comment>Components that transport electrical energy over long distances at high voltages.</rdfs:comment>
    <rdfs:label>transmission_asset</rdfs:label>
  </owl:Class>
  
  <!-- Distribution Asset Hierarchy -->  
  <owl:Class rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#distribution-asset">
    <rdfs:subClassOf rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#grid-component"/>
    <rdfs:comment>Components that distribute electrical energy from transmission systems to end users.</rdfs:comment>
    <rdfs:label>distribution_asset</rdfs:label>
  </owl:Class>
  
  <!-- Consumption Asset Hierarchy -->
  <owl:Class rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#consumption-asset">
    <rdfs:subClassOf rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#grid-component"/>
    <rdfs:comment>Components that consume electrical energy including loads and energy storage systems.</rdfs:comment>
    <rdfs:label>consumption_asset</rdfs:label>
  </owl:Class>

  <!-- Distributed Energy Resources (DER) and Microgrids -->
  <owl:Class rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#distributed-energy-resource">
    <rdfs:subClassOf rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-components.owl#generation-asset"/>
    <rdfs:comment>A distributed energy resource that generates electricity at or near the point of use, including renewable and non-renewable sources.</rdfs:comment>
    <rdfs:label>distributed_energy_resource</rdfs:label>
  </owl:Class>
  
  <owl:Class rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#solar-pv-system">
    <rdfs:subClassOf rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-components.owl#distributed-energy-resource"/>
    <rdfs:comment>Photovoltaic solar panels that convert sunlight directly into electricity using semiconductor materials.</rdfs:comment>
    <rdfs:label>solar_pv_system</rdfs:label>
  </owl:Class>
  
  <owl:Class rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#wind-turbine">
    <rdfs:subClassOf rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-components.owl#distributed-energy-resource"/>
    <rdfs:comment>Wind-powered generator that converts kinetic wind energy into electrical energy through rotating blades.</rdfs:comment>
    <rdfs:label>wind_turbine</rdfs:label>
  </owl:Class>
  
  <owl:Class rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#fuel-cell">
    <rdfs:subClassOf rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-components.owl#distributed-energy-resource"/>
    <rdfs:comment>Electrochemical device that converts hydrogen and oxygen into electricity with water and heat as byproducts.</rdfs:comment>
    <rdfs:label>fuel_cell</rdfs:label>
  </owl:Class>
  
  <owl:Class rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#inverter">
    <rdfs:subClassOf rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#grid-component"/>
    <rdfs:comment>Power electronic device that converts direct current (DC) to alternating current (AC) for grid integration of DER systems.</rdfs:comment>
    <rdfs:label>inverter</rdfs:label>
  </owl:Class>
  
  <owl:Class rdf:about="http://www.anl.gov/sss/grid-stix-2.1-components.owl#microgrid">
    <rdfs:subClassOf rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-assets.owl#physical-asset"/>
    <rdfs:comment>Local energy grid that can disconnect from the main transmission grid and operate autonomously using distributed energy resources.</rdfs:comment>
    <rdfs:label>microgrid</rdfs:label>
  </owl:Class>
  
