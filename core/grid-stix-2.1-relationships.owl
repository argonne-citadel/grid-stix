@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix stix: <http://stixschema.org/v21#> .
@prefix grid: <http://www.anl.gov/sss/grid-stix-2.1-relationships.owl#> .

# ------------------------------------------------------------------
# Grid-STIX 2.1 Relationships Module
# IRI: http://www.anl.gov/sss/grid-stix-2.1-relationships.owl
# ------------------------------------------------------------------

<http://www.anl.gov/sss/grid-stix-2.1-relationships.owl>
    a owl:Ontology ;
    rdfs:comment "Grid-STIX 2.1: Relationship classes extending STIX Relationship" ;
    owl:imports <http://stixschema.org/v21#Relationship> .

################################################################################
# Base Relationship Class
################################################################################

grid:GridRelationship
    a owl:Class ;
    rdfs:subClassOf stix:Relationship ;
    rdfs:comment "Base class for all grid-specific relationships." .

################################################################################
# Specialized Relationship Subclasses
################################################################################

# Monitors Relationship
grid:MonitorsRelationship
    a owl:Class ;
    rdfs:subClassOf grid:GridRelationship , [
        a owl:Restriction ;
        owl:onProperty stix:relationship_type ;
        owl:hasValue "monitors"^^xsd:string
    ] ;
    rdfs:label "monitors" ;
    rdfs:comment "Relationship where an OTDevice monitors a GridComponent." .

