  <owl:Ontology rdf:about="http://www.anl.gov/sss/grid-stix-2.1-asset-types.owl">
    <dc:title>Grid-STIX 2.1 Asset Type Taxonomy</dc:title>
    <dc:description>Abstract asset type definitions for mapping MITRE ATT&amp;CK techniques to grid infrastructure categories. These types serve as targets for attack patterns and provide semantic grouping for asset instances.</dc:description>
    <dc:creator>ZTCard Project</dc:creator>
    <owl:versionInfo>2.1.0</owl:versionInfo>
    <rdfs:label>grid_stix_2_1_asset_types</rdfs:label>
    <owl:imports rdf:resource="http://docs.oasis-open.org/ns/cti/stix/infrastructure"/>
  </owl:Ontology>

  <!-- Base Asset Type Class -->
  <owl:Class rdf:about="http://www.anl.gov/sss/grid-stix-2.1-asset-types.owl#asset-type">
    <rdfs:subClassOf rdf:resource="http://docs.oasis-open.org/ns/cti/stix/infrastructure"/>
    <rdfs:comment>Abstract base class for grid infrastructure asset types. Asset types represent categories of assets that share common attack surfaces and operational characteristics.</rdfs:comment>
    <rdfs:label>asset_type</rdfs:label>
  </owl:Class>

  <!-- Asset Type Properties -->
  <owl:DatatypeProperty rdf:about="http://www.anl.gov/sss/type-identifier">
    <rdfs:domain rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-asset-types.owl#asset-type"/>
    <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
    <rdfs:comment>STIX identifier for the asset type (e.g., x-grid-rtu)</rdfs:comment>
    <rdfs:label>type_identifier</rdfs:label>
  </owl:DatatypeProperty>

  <owl:DatatypeProperty rdf:about="http://www.anl.gov/sss/asset-category">
    <rdfs:domain rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-asset-types.owl#asset-type"/>
    <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
    <rdfs:comment>Category of asset type (ot-device, control-system, grid-component, etc.)</rdfs:comment>
    <rdfs:label>asset_category</rdfs:label>
  </owl:DatatypeProperty>

  <owl:DatatypeProperty rdf:about="http://www.anl.gov/sss/criticality">
    <rdfs:domain rdf:resource="http://www.anl.gov/sss/grid-stix-2.1-asset-types.owl#asset-type"/>
    <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
    <rdfs:comment>Criticality level of asset type (critical, high, medium, low)</rdfs:comment>
    <rdfs:label>criticality</rdfs:label>
  </owl:DatatypeProperty>

